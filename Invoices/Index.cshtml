@model SunridgeWEB.Pages.Admin.Invoices.IndexModel
@{
}
<div class="container bg-primary bg-gradient ml-0 text-center py-3 rounded text-light" style="padding-top: 0.25rem; padding-bottom: 0.1rem;">
	<h1>Invoices</h1>
</div>

<div class="container-fluid">
	<div class="container mt-5">
		<div class="row mb-3">
			<div class="col">
				<a asp-area="" asp-page="Create" class="btn btn-primary">
					<i class="bi bi-person-plus-fill"></i> Create Invoice
				</a>
				<button id="btnExcel" class="btn btn-success mr-2">Export To Excel</button>
			</div>
		</div>
		<table class="table table-striped table-bordered" id="DT_Invoices">
			<thead>
				<tr>
					<th>View</th>
					<th>Invoice Number</th>
					<th>Invoice Title</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Invoice Amount</th>
					<th>Date</th>
          <th>DueDate</th>
					<th>Invoice Paid</th>
					<th>Notes</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>

<script>
	$('#btnExcel').on('click', function () {
		dataTable.button('.buttons-excel').trigger();
	});
</script>

@section Scripts
{
	<script src="~/js/invoices.js"></script>

}

